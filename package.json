		"@types/express": "^5.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^22.10.1",
		"@types/nodemailer": "^6.4.17",
		"@types/proper-lockfile": "^4.1.4",
		"@types/uuid": "^10.0.0",
		"@types/ws": "^8.5.13",
		"@typescript-eslint/eslint-plugin": "^8.37.0",
		"@typescript-eslint/parser": "^8.37.0",
		"concurrently": "^9.2.1",
		"cpx": "^1.5.0",
		"eslint": "^9.16.0",
		"globals": "^15.9.0",
		"madge": "^8.0.0",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.37.0",
		"wait-on": "^9.0.0"
	},
	"scripts": {
		"clean": "rm -rf dist",
		"prod": "npm run clean && npm run prod:assets && npm run prod:assets-cjs && npm run prod:build && npm run prod:server",
		"prod:build": "node build.js && tsc",
		"prod:server": "node dist/server/server.js",
		"prod:assets": "cpx 'src/**/*.{html,ejs,css,png,jpg,webp,avif,svg,ico,gif,json,mp3,wav,glsl,toml,md}' dist",
		"prod:assets-cjs": "cpx 'src/client/scripts/cjs/**/*.js' dist/client/scripts/cjs",
		"dev": "npm run clean && concurrently -k \"npm:dev:*\" --prefix-colors \"green,grey,blue,white\"",
		"dev:build": "node build.js --dev",
		"dev:server": "wait-on dist/server/server.js && nodemon",
		"dev:tsc": "tsc --watch --preserveWatchOutput",
		"dev:assets": "cpx 'src/**/*.{html,ejs,css,png,jpg,webp,avif,svg,ico,gif,json,mp3,wav,glsl,toml,md}' dist --watch",
		"dev:assets-cjs": "cpx 'src/client/scripts/cjs/**/*.js' dist/client/scripts/cjs --watch",
		"build-images": "node src/server/utility/generateImages.js",
		"generate-dependancy-graph": "node src/server/utility/generateDependancyGraph.js"
	}
}
